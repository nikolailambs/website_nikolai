<div id="projects" class="wrapper">
  <div class="container">
    <h2 class="section-title" style="color: #0b9e43; background-color: rgba(11, 158, 67, .1);">My Projects</h2>
    <div class="projects-wrapper">

      <% @projects.each do |project| %>
        <style>
           .<%= project.name %>-card:hover {
              background-color: <%= project.color %>;
            }
        </style>

        <div class="project-card <%= project.name %>-card">
          <div class="row">
            <div class="col-sm-12 col-md-7">
              <div>
                <h3><%= project.title %></h3>
                <p><%= project.description %></p>
                <%#= project.category %>
              </div>
            </div>
            <div class="col-sm-12 col-md-5">
              <%= cl_image_tag project.name, width: 400 %>
            </div>
          </div>

          <a
            <% if project.link != "" %>
              href="<%= project.link %>"
            <% end %>
          style="position: absolute; top: 0; bottom: 0; left: 0; right: 0;" target="_blank"></a>
        </div>
      <% end %>

    </div>
  </div>
</div>



