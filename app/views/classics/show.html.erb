<div class="classic-container">
  <div class="navbar-wagon classic-navbar">
    <!-- Logo -->

    <%= link_to root_path(anchor: "example-anchor"), class: "classic-back-link" do %>
    <i class="fas fa-chevron-left"></i><p>Back</p>
    <% end %>

    <!-- Right Navigation -->
    <div class="navbar-wagon-right classic-navbar-right">
      <a href="" class="navbar-wagon-item navbar-wagon-link classic-navbar-link" id="classic-products">Products</a>
      <a href="" class="navbar-wagon-item navbar-wagon-link classic-navbar-link" id="classic-company">Company</a>
      <a href="" class="navbar-wagon-item navbar-wagon-link classic-navbar-link" id="classic-location">Locations</a>
      <a href="" class="navbar-wagon-item navbar-wagon-link classic-navbar-link" id="classic-about">About</a>
      <a href="" class="navbar-wagon-item navbar-wagon-link classic-navbar-link" id="classic-contact">Contact</a>
    </div>
  </div>

  <div class="banner" style='background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url("https://res.cloudinary.com/dcmqib0ib/image/upload/banner1.jpg") %>);'>
    <div class="banner-content">
      <h1>Classic company</h1>
      <p>High quality engineering</p>
    </div>
  </div>

  <div class="classic-timeline-header">
    <h1>Products</h1>
  </div>
  <div class="card-container">
    <div class="row">
      <div class="col-xs-12 col-sm-4">
       <div class="card" style='background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url("https://res.cloudinary.com/dcmqib0ib/image/upload/card1.jpg");'>
        <div class="card-category">Machine part</div>
        <div class="card-description">
          <h2>Product 1</h2>
          <p>Perfectly engineered</p>
        </div>
        <a class="card-link" href="#" ></a>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style='background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),url("https://res.cloudinary.com/dcmqib0ib/image/upload/card2.jpg");'>
        <div class="card-category">Machine part</div>
        <div class="card-description">
          <h2>Product 2</h2>
          <p>High quality</p>
        </div>
        <a class="card-link" href="#" ></a>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style='background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url("https://res.cloudinary.com/dcmqib0ib/image/upload/card3.jpg");'>
        <div class="card-category">Gear</div>
        <div class="card-description">
          <h2>Product 3</h2>
          <p>Beautifully designed</p>
        </div>
        <a class="card-link" href="#" ></a>
      </div>
    </div>
  </div>
</div>


<div class="classic-timeline-container">
  <div class="classic-timeline-header">
    <h1>We have a long company history</h1>
  </div>
  <div class="item">
    <div id="timeline">
      <div>
        <section class="year">
          <h3>1935</h3>
          <section>
            <ul>
              <li>Founded by great-grandfather</li>
            </ul>
          </section>
        </section>
        <section class="year">
          <h3>1940</h3>
          <section>
            <h4>August</h4>
            <ul>
              <li>Signed first customer.</li>
            </ul>
          </section>
          <section>
            <h4>October</h4>
            <ul>
              <li>Shipped first product.</li>
            </ul>
          </section>
          <section>
            <h4>November</h4>
            <ul>
              <li>Signed two more customer.</li>
            </ul>
          </section>
        </section>
        <section class="year">
          <h3>1980</h3>
          <section>
            <h4>January</h4>
            <ul>
              <li>Son took over.</li>
              <li>Huge improvements.</li>
            </ul>
          </section>
          <section>
            <h4>October</h4>
            <ul>
              <li>Globally active.</li>
            </ul>
          </section>
          <section>
            <h4>December</h4>
            <ul>
              <li>Reached number of 300 employees.</li>
              <li>Increased product range.</li>
            </ul>
          </section>
        </section>
        <section class="year">
          <h3>2000</h3>
          <section>
            <h4>February</h4>
            <ul>
              <li>Highly profitable.</li>
              <li>High quality products.</li>
            </ul>
          </section>
          <section>
            <h4>August</h4>
            <ul>
              <li>Bought other company.</li>
            </ul>
          </section>
        </section>
      </div>
    </div>
  </div>
</div>

</div>


<script>
  <% array = ["products", "company", "location", "about", "contact"] %>
  <% array.each do |a| %>

  $("#classic-<%= a %>").hover(function() {
    $("#classic-<%= a %>").siblings().addClass("classic-nav-hover" )
  },function() {
    $("#classic-<%= a %>").siblings().removeClass("classic-nav-hover")
  });

  <% end %>
</script>
